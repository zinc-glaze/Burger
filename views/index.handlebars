<div class="container">
  <div class="row">
    <div class="col s12">
      <h2 class="center-align">Burger Devourer</h2>
    </div>
  </div>
  <div class="row">
    <div class="col s4 center-align">
      <h5>Ready to Consume</h5>
      <br>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            <li>
              <h6>{{burger_name}}  <button class="btn waves-effect waves-light">Devour</button></h6>
              <br>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <form class="col s4 center-align">
      <div class="row">
        <div class="input-field col s12">
          <input id="user-burger" type="text" class="validate">
          <label for="user-burger">Enter a burger here</label>
        </div>
      </div>
      <div class="row"><button id="new-burger" class="btn waves-effect waves-light" type="submit" name="action">Submit</button></div>
      <div class="row"><p>Enter a burger that you would like to consume</p></div>
    </form>
    <div class="col s4 center-align">
      <h5>Consumed</h5>
      <br>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            <li>
              <p>{{burger_name}}</p>
              <br>
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>